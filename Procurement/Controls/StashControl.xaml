             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Procurement.Controls"
             mc:Ignorable="d"
             d:DesignHeight="592" d:DesignWidth="591" Height="592" Width="591">
    
        <Grid x:Name="gridOuter">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/stash-grid.jpg" />
            </Grid.Background>
            <Border x:Name="LocalBorder" BorderThickness="3" CornerRadius="2" BorderBrush="Transparent">
                <Grid x:Name="grid" Margin="10, 10, 8, 10" />
            </Border>
            
        </Grid>

