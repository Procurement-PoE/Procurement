<UserControl x:Class="Procurement.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="630" Width="1012">
    <Grid x:Name="ViewContent" Width="990">
        <Border BorderBrush="#FF76591B" BorderThickness="2" VerticalAlignment="Top" Background="Black" Margin="5, 15, 0, 0" Height="600">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="505"/>
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="485"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="38*" />
                        <RowDefinition Height="48*" />
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="/Procurement;component/Images/Sir%20medved%20about.png" Width="504" Height="483"/>
                    <Label Name="lblCreatedBy" Grid.Row="1" Content="Created By :" Foreground="#FFAB9066" FontSize="12" FontWeight="Bold"/>
                    <Label Grid.Row="1" Content="                      Stickymaddness             " Foreground="#FFAB9066" FontSize="22" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="60,19,60,3" Grid.RowSpan="2" />
                    <Label Grid.Row="3" Content="                     &amp; Medvedttn             " Foreground="#FFAB9066" FontSize="22" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="60,0,60,6" />
                </Grid>
                <Grid Grid.Column="2" VerticalAlignment="Top" Margin="30,0,6,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="320"/>
                    </Grid.RowDefinitions>
                    
                    <Label x:Name="Version" Grid.Row="0" Foreground="#FFAB9066" FontSize="18" FontWeight="UltraBold"/>
                    <StackPanel Grid.Row="2" >
                        <TextBlock Name="txtOpenSource" Foreground="#FFAB9066" TextWrapping="Wrap" FontSize="14" Text="This open source software is provided free of charge!" />
                        <TextBlock />
                        <TextBlock Name="txtForTheLatestUpdates" Foreground="#FFAB9066" TextWrapping="Wrap" FontSize="14" Text="For the latest updates, bug reports or feature requests, please visit : https://github.com/medvedttn/Procurement" />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3">
                        <TextBlock Foreground="#FFAB9066" TextWrapping="Wrap" FontSize="14" Text="If you'd like to buy me a beer, you can do so here:" Visibility="Hidden" />

                        <Button Grid.Column="3" Grid.Row="1"  Name="DonateButton" HorizontalAlignment="Left" Click="DonateButton_Click" Height="47" Width="147" Margin="0,15,0,0" IsEnabled="False">
                            <Image Visibility="Hidden">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Source" Value="/Procurement;component/Images/buttons/donate.png"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Source" Value="/Procurement;component/Images/buttons/donate-hover.png"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Button>


                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" VerticalAlignment="Bottom">
                        <TextBlock Name="txtLegal" Foreground="#FFAB9066" TextWrapping="Wrap" Text="Legal :" FontSize="11" />
                        <TextBlock />
                        <TextBlock Name="txtCopyrights" Foreground="#FFAB9066" TextWrapping="Wrap" Text="Path Of Exile, the Path Of Exile logo and all related artwork used in this application are Copyright © Grinding Gear Games. For further information please visit:                     http://www.pathofexile.com" FontSize="11" />
                        <TextBlock FontSize="11" />
                        <TextBlock Name="txtLicensed" Foreground="#FFAB9066" TextWrapping="Wrap" Text="This work is licensed under Artistic License 2.0." />
                        <TextBlock />
                        <TextBlock Name="txtAsIs" Foreground="#FFAB9066" TextWrapping="Wrap" Text="This software is provided *AS IS* and the authors disclaim all warranties with regard to this software including all implied warranties of merchantability and fitness. In no event shall the authors be liable for any special, direct, indirect or consequential damages or any damage whatsoever resulting from loss of use, data or profits, whether in action of contract, negligence or other tortious action, arising out of or in connection with the use or performance of this software." FontSize="11" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
